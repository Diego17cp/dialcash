<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transaction_bottom_sheet_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/containerLayout"
        android:background="@drawable/bg_transaction_transfer"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="@color/surface"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">
                <ImageView
                    android:id="@+id/ivTransactionType"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_income"
                    app:tint="@color/colorPrimary" />
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTransactionAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    tools:text="- $ 50.00"
                    android:textAppearance="?attr/textAppearanceDisplaySmall"
                    android:textStyle="bold"
                    android:textColor="@color/negative_balance"
                    android:visibility="visible" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTransactionAmount"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/background"
                    app:hintEnabled="false"
                    android:visibility="gone">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTransactionAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:textAppearance="?attr/textAppearanceDisplaySmall"
                        android:textStyle="bold"
                        tools:text="50.00" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tvTransactionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOutline"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Transaction Description" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTransactionDescription"
                    style="?attr/textInputFilledStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:boxBackgroundColor="@color/background"
                    android:hint="@string/description"
                    android:visibility="gone">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTransactionDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:gravity="end"
                        android:textAlignment="viewEnd"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="?attr/colorOutline"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Creation Date Icon" />
                <TextView
                    android:id="@+id/tvTransactionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10 Sep, 2025 07:30 PM"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOutline" />
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- From account elements -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fromAccountCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/background"
                app:rippleColor="?attr/colorControlHighlight">
                <LinearLayout
                    android:id="@+id/fromAccountItem"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_accounts_filled"
                        app:tint="?attr/colorPrimary" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hint_account"
                            android:id="@+id/tv_account_from"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView
                            android:id="@+id/tvAccountName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_type_bank_account"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAccountName"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:boxBackgroundColor="@color/background"
                android:hint="@string/hint_account"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/actvAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:text="Bank Account"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- To Account (for transfers) -->
            <LinearLayout
                android:id="@+id/layoutTransferTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/toAccountCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/background"
                    app:rippleColor="?attr/colorControlHighlight">
                    <LinearLayout
                        android:id="@+id/toAccountItem"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bank"
                            app:tint="?attr/colorPrimary" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/transferred_to"
                                android:id="@+id/tv_account_to"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                            <TextView
                                android:id="@+id/tvAccountToName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/account_type_other"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAccountToName"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:boxBackgroundColor="@color/background"
                    android:hint="@string/hint_to_account"
                    android:visibility="gone">
                    <AutoCompleteTextView
                        android:id="@+id/actvAccountToName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        tools:text="Digital Wallet"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <!-- Income Group (for incomes) -->
            <LinearLayout
                android:id="@+id/layoutIncomeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/incomeGroupCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/background"
                    app:rippleColor="?attr/colorControlHighlight">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_income_item"
                            app:tint="?attr/colorPrimary" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/income_group"
                                android:id="@+id/tv_income_group"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                            <TextView
                                android:id="@+id/tvIncomeGroupName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/account_type_other"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilIncomeGroupName"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:boxBackgroundColor="@color/background"
                    android:hint="@string/income_group"
                    android:visibility="gone">
                    <AutoCompleteTextView
                        android:id="@+id/actvIncomeGroupName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        tools:text="Salary"
                        android:textAppearance="?attr/textAppearanceBodyLarge" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />
        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/footer_actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">
            <LinearLayout
                android:id="@+id/actions_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/ic_delete"
                    android:text="@string/delete"
                    android:textColor="?attr/colorError"
                    app:iconTint="?attr/colorError"
                    android:gravity="center"
                    app:iconGravity="textStart"
                    app:strokeColor="?attr/colorError" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    app:iconGravity="textStart"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_pen_filled"
                    android:text="@string/edit" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/edit_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/cancel" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:iconGravity="textStart"
                    app:icon="@drawable/ic_check"
                    android:text="@string/save" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/delete_confirm_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelDelete"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/cancel" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConfirmDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:iconGravity="textStart"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_x"
                    android:text="@string/confirm_delete"
                    android:backgroundTint="?attr/colorError"
                    android:textColor="?attr/colorOnError"
                    app:iconTint="?attr/colorOnError" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>