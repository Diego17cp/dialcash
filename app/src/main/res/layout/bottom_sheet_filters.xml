<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!-- Handle -->
    <View
        android:layout_width="52dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/bg_drag_handle" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Search -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSearch"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:boxBackgroundColor="@color/background"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorSecondaryVariant"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/text_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingVertical="14dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_primary" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Transaction Types Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/transaction_types"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/incomeSelectorCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_transfer_btn"
                            android:padding="8dp"
                            android:src="@drawable/ic_income"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/titleIncomeSelector"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/incomes"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/checkIncomeSelector"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_filled"
                            android:visibility="gone"
                            app:tint="@color/colorPrimary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/expenseSelectorCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_transfer_btn"
                            android:padding="8dp"
                            android:src="@drawable/ic_expense"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/titleExpenseSelector"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/expenses"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/checkExpenseSelector"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_filled"
                            android:visibility="gone"
                            app:tint="@color/colorPrimary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/transferSelectorCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_transfer_btn"
                            android:padding="8dp"
                            android:src="@drawable/ic_transactions_outline"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/titleTransferSelector"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="@string/transfers"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/checkTransferSelector"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_filled"
                            android:visibility="gone"
                            app:tint="@color/colorPrimary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!-- Date Range Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/date_range"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/startDateCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="?attr/colorControlHighlight"
                        app:strokeColor="?attr/colorOutlineVariant"
                        app:strokeWidth="1dp">
                        <LinearLayout
                            android:id="@+id/fromAccountItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:id="@+id/tvStartDateHint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/hint_start_date"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="?attr/colorPrimary" />

                                <TextView
                                    android:id="@+id/tvStartDateValue"
                                    android:layout_width="99dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="DD/MM/YYYY"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/colorPrimary" />

                                <ImageView
                                    android:id="@+id/chevronStartDate"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_chevron_right"
                                    app:tint="?attr/colorOnSurfaceVariant" />
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_start_date"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:background="@null"
                                android:cursorVisible="false"
                                android:focusable="true"
                                android:importantForAutofill="no"
                                android:textColor="@android:color/transparent" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/endDateCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:rippleColor="?attr/colorControlHighlight"
                        app:strokeColor="?attr/colorOutlineVariant"
                        app:strokeWidth="1dp">
                        <LinearLayout
                            android:id="@+id/toAccountItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <TextView
                                android:id="@+id/tvEndDateHint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/hint_end_date"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="?attr/colorPrimary" />
                                <TextView
                                    android:id="@+id/tvEndDateValue"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="DD/MM/YYYY"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="@color/colorPrimary" />
                                <ImageView
                                    android:id="@+id/chevronEndDate"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_chevron_right"
                                    app:tint="?attr/colorOnSurfaceVariant" />
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_end_date"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                android:background="@null"
                                android:cursorVisible="false"
                                android:focusable="true"
                                android:importantForAutofill="no"
                                android:textColor="@android:color/transparent" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <!--  Accounts Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/accounts_selector"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupAccounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp"
                    app:selectionRequired="false"
                    app:singleSelection="false"></com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApplyFilters"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:text="@string/apply_filters"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_check_filled"
        app:iconGravity="textStart"
        app:iconPadding="8dp" />
</LinearLayout>