<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".DialCashApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.Dialcash">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Base.Theme.Dialcash.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.Dialcash" />
        <activity
            android:name=".FirstAccountActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.Dialcash"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".NewTransactionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.Dialcash"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ui.accounts.NewAccountActivity"
            android:theme="@style/Base.Theme.Dialcash" />
        <activity android:name=".SettingsActivity"
            android:theme="@style/Base.Theme.Dialcash" />
        <activity android:name=".NewIncomeActivity"
            android:theme="@style/Base.Theme.Dialcash" />
        <activity android:name=".EditProfileActivity"
            android:theme="@style/Base.Theme.Dialcash" />
        <activity android:name=".DeleteAccountActivity"
            android:theme="@style/Base.Theme.Dialcash" />
        <activity android:name=".DownloadDataActivity"
            android:theme="@style/Base.Theme.Dialcash" />
        <activity android:name=".ImportDataActivity"
            android:theme="@style/Base.Theme.Dialcash" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>